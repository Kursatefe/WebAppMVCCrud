@model IEnumerable<MVCCrudOdev.Models.Kategori>

@{
    ViewBag.Title = "Kategoiler";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Kategori Ekle","Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAciklamasi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Urun)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAciklamasi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Urun)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fiyat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.Id }) |
           
            @Html.ActionLink("Sil", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
